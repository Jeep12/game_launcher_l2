{
  "name": "Launcher-L2-Terra",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "set NODE_ENV=development && electron .",
    "build": "webpack --config webpack.config.js",
    "build:clean": "rimraf dist && webpack --config webpack.config.js",
    "dist": "cross-env NODE_ENV=production electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "webpack --watch --config webpack.config.js",
    "dev": "concurrently \"npm run watch\" \"npm start\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Aplicaci√≥n PWA en Electron",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "^28.3.3",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-reloader": "^1.2.3",
    "mini-css-extract-plugin": "^2.9.2",
    "path-browserify": "^1.0.1",
    "rimraf": "^5.0.5",
    "style-loader": "^4.0.0",
    "webpack": "^5.100.2",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "bootstrap": "^5.3.5",
    "buffer": "^6.0.3",
    "core-util-is": "^1.0.3",
    "crypto-browserify": "^3.12.1",
    "https-browserify": "^1.0.0",
    "jquery": "^3.7.1",
    "jsonwebtoken": "^9.0.2",
    "popper.js": "^1.16.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "vm-browserify": "^1.1.2"
  },
  "build": {
    "appId": "L2Terra",
    "productName": "Launcher Terra",
    "files": [
      "index.html",
      "main.js",
      "splash.html",
      "dist/**/*",
      "preload.js",
      "!node_modules/**/*.md",
      "!node_modules/**/*.txt",
      "!node_modules/**/*.map",
      "!node_modules/**/test/**/*",
      "!node_modules/**/tests/**/*",
      "!node_modules/**/docs/**/*",
      "!node_modules/**/examples/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "requestedExecutionLevel": "requireAdministrator"
    },
    "mac": {
      "icon": "src/static/assets/images/images/Tlogo-terra.webp",
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "icon": "src/static/assets/images/images/Tlogo-terra.webp",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
